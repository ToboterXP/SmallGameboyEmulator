#ifndef PROCESSOR_H_
#define PROCESSOR_H_

#include <cstdint>

namespace proc {

const uint8_t ZERO_FLAG = 0b10000000;
const uint8_t SUB_FLAG = 0b1000000;
const uint8_t HALF_CARRY_FLAG = 0b100000;
const uint8_t CARRY_FLAG = 0b10000;

class Processor {
public:
	uint8_t a;
	uint8_t f;
	uint8_t b;
	uint8_t c;
	uint8_t d;
	uint8_t e;
	uint8_t h;
	uint8_t l;
	uint16_t sp;
	uint16_t pc;
	Processor();
	virtual ~Processor();
};

} /* namespace proc */

#endif /* PROCESSOR_H_ */
