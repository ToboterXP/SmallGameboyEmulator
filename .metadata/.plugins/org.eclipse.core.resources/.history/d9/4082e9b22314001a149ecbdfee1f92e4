#ifndef APU_H_
#define APU_H_

#include <cstdint>
#include "AudioInterface.h"
#include <memory/MemoryManager.h>

using namespace memory;

namespace audio {

class APU {
public:
	AudioInterface * audio;
	MemoryManager * memory;

	uint16_t c1_freq = 0;
	uint32_t c1_remaining = 0;
	uint8_t c1_volume = 0;
	bool c1_useCounter = false;


	APU(MemoryManager * memory);
	virtual ~APU();
	void update();
};

} /* namespace audio */

#endif /* APU_H_ */
