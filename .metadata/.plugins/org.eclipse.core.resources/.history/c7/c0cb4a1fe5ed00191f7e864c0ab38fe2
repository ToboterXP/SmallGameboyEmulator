#ifndef I00_1F_H_
#define I00_1F_H_

#include <cstdint>
#include "Processor.h"

namespace proc {

int execute00_1f(uint8_t opcode, Processor * proc) {
	switch (opcode) {
	case 0x00: //nop
		return 1;
	case 0x01: //ld bc,d16
		proc->setBC(proc->getInstruction16());
		return 3;
	case 0x02: //ld (bc),a
		proc->memory->writeMemory(proc->getBC(), proc->a);
		return 2;
	case 0x03: //inc bc
		proc->setBC(proc->getBC()+1);
		return 2;
	case 0x04: //inc b
		proc->b++;
		return 1;
	case 0x05: //dec b
		proc->b--;
		return 1;
	case 0x06: //ld b,d8
		proc->b = proc->getInstruction8();
		return 2;
	case 0x07: //rlca
		proc->f
	}
}

}

#endif /* I00_1F_H_ */
