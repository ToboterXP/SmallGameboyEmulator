#include "Gameboy.h"

#include <stdlib.h>

Gameboy::Gameboy() {
	this->memory = new MemoryManager();
	//catch-all ram
	this->memory->addSection(MemorySection(0x00,0x10000));

	this->processor = new Processor(this->memory);
}

Gameboy::~Gameboy() {
	delete this->memory;
}

void Gameboy::test() {

	uint16_t test = 0xABAB;
	uint8_t test2 = 0xFF;
	printf("%x",test+((int8_t)test2));
}

