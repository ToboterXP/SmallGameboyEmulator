#ifndef IE0_FF_H_
#define IE0_FF_H_


#include <cstdint>
#include "Processor.h"

namespace proc {

void _call(Processor * proc,uint16_t addr) {
	proc->push16(proc->pc);
	proc->pc = addr;
}

int executeE0_FF(uint8_t opcode, Processor * proc) {
	switch (opcode) {
	case 0xe0: //ldh (a8),A
		proc->memory->writeMemory(0xff00 + proc->getInstruction8(),proc->a);
		return 3;
	case 0xe1: //pop hl
		proc->setHL(proc->pop16());
		return 3;
	case 0xe2: //ld (c),a
		proc->memory->writeMemory(0xff00 + proc->c,proc->a);
		return 2;
	case 0xe3: //-
		proc->unknownOpcode();
		return 1;
	case 0xe4: //-
		proc->unknownOpcode();
		return 1;
	case 0xe5: //push hl
		proc->push16(proc->getHL());
		return 4;
	case 0xe6: //and d8
		proc->setFlag(SUB_FLAG,0);
		proc->setFlag(HALF_CARRY_FLAG,1);
		proc->setFlag(CARRY_FLAG,0);
		proc->a &=  proc->getInstruction8();
		proc->setFlag(ZERO_FLAG,proc->a==0);
		return 2;
	case 0xe7: //rst 20h
		_call(proc,0x20);
		return 4;
	case 0xe8: //add sp,r8
		int8_t b = proc->getInstruction8();
		proc->sp += b;
		proc->setFlag(SUB_FLAG,0);
		proc->setFlag(ZERO_FLAG,0);
		return 4;
	case 0xe9: //jp (hl)
		proc->pc = proc->readMemory16(proc->getHL());
		return 1;
	case 0xea: //ld (a16),a
		proc->memory->writeMemory(proc->getInstruction16(),proc->a);
		return 4;
	case 0xeb: //-
		proc->unknownOpcode();
		return 1;
	case 0xec: //-
		proc->unknownOpcode();
		return 1;
	case 0xed: //-
		proc->unknownOpcode();
		return 1;
	case 0xee: //xor d8
		proc->setFlag(SUB_FLAG,0);
		proc->setFlag(HALF_CARRY_FLAG,0);
		proc->setFlag(CARRY_FLAG,0);
		proc->a ^=  proc->getInstruction8();
		proc->setFlag(ZERO_FLAG,proc->a==0);
		return 1;
	}
}
}


#endif /* IE0_FF_H_ */
