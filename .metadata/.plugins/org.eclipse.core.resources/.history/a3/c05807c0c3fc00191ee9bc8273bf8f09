#include <misc/Joypad.h>

namespace misc {

Joypad::Joypad() {
	// TODO Auto-generated constructor stub

}

Joypad::~Joypad() {
	// TODO Auto-generated destructor stub
}

void Joypad::clock(MemoryManager * memory) {
	SDL_Event event;
	while (SDL_PollEvent(&event)) {
		switch (event.type) {
		case SDL_QUIT:
			exit(0);
			break;
		case SDL_KEYDOWN:
			break;
		case SDL_KEYUP:
			break;
		}
	}
	switch (memory->readMemory(0xff00)) {
	case 0x10:
		memory->writeMemory(0xff00,(pressedKeys>>4));
		break;
	case 0x20:
		memory->writeMemory(0xff00,(pressedKeys&0xf));
		break;
	}

}


} /* namespace ppu */
