#ifndef IC0_DF_H_
#define IC0_DF_H_


#include <cstdint>
#include "Processor.h"

namespace proc {

void _ret(Processor * proc) {
	proc->pc = proc->pop16();
}

int executeC0_DF(uint8_t opcode, Processor * proc) {
	switch(opcode) {
	case 0xc0: //ret nz
		if (!proc->getFlag(ZERO_FLAG)) {
			_ret(proc);
			return 5;
		} else {
			return 2;
		}
	case 0xc1: //pop bc
		proc->setBC(proc->pop16());
		return 3;
	case 0xc2: //jp nz,a16
		if (!proc->getFlag(ZERO_FLAG)) {
			proc->pc = proc->getInstruction16();
			return 4;
		} else {
			return 3;
		}
	}
}

}


#endif /* IC0_DF_H_ */
